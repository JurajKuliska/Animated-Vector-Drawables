<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LetterStyle">
        <item name="android:paddingStart">@dimen/logo_letter_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/logo_letter_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/logo_letter_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/logo_letter_padding_vertical</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
